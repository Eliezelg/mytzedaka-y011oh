# Base URL for the backend API (default: development environment)
REACT_APP_API_URL=http://localhost:3000
# API version identifier for versioned endpoints
REACT_APP_API_VERSION=v1

# Payment Gateway Configuration
# Stripe Connect public API key (v2023-10)
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your_stripe_key
# Tranzilla terminal key for Israeli payment processing (v1.0)
REACT_APP_TRANZILLA_TERMINAL_KEY=your_tranzilla_key

# Authentication
# Local storage key for secure token storage
REACT_APP_AUTH_TOKEN_KEY=ijap_auth_token

# Localization
# Default application language (en=English, he=Hebrew, fr=French)
REACT_APP_DEFAULT_LANGUAGE=en
# Enable Right-to-Left (RTL) support for Hebrew interface
REACT_APP_ENABLE_RTL=true

# Features
# Toggle for analytics tracking
REACT_APP_ENABLE_ANALYTICS=false
# Maximum file size for uploads (5MB in bytes)
REACT_APP_MAX_FILE_SIZE=5242880
# Supported currency codes for donations
REACT_APP_SUPPORTED_CURRENCIES=USD,EUR,ILS