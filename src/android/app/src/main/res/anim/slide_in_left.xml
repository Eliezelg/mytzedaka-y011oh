<?xml version="1.0" encoding="utf-8"?>
<!--
    Slide in from left animation for screen transitions
    Duration: 300ms
    Interpolator: Accelerate-decelerate for natural motion
    Used in: Fragment transitions, activity transitions, navigation drawer
    Paired with: slide_out_right.xml for synchronized transitions
    Accessibility: Respects system motion reduction preferences
-->
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <translate
        android:duration="300"
        android:fromXDelta="-100%p"
        android:toXDelta="0"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator" />
</set>