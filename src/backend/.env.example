# Application Settings
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,https://ijap.org
API_VERSION=1.0.0
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,he,fr
TRUST_PROXY=false
LOG_LEVEL=info
LOG_FORMAT=json

# Authentication Settings
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=15m
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRATION=7d
SESSION_SECRET=your_session_secret
COOKIE_SECRET=your_cookie_secret
ENABLE_2FA=true
2FA_ISSUER=IJAP
2FA_SECRET_LENGTH=32
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800000

# Database Settings
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net
MONGODB_DATABASE=ijap_dev
MONGODB_USERNAME=your_mongodb_user
MONGODB_PASSWORD=your_mongodb_password
MONGODB_AUTH_SOURCE=admin
MONGODB_SSL=true
MONGODB_REPLICA_SET=rs0
MONGODB_READ_PREFERENCE=primaryPreferred
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=50
MONGODB_CONNECTION_TIMEOUT=30000
MONGODB_SOCKET_TIMEOUT=45000
MONGODB_HEARTBEAT_FREQUENCY=10000

# Stripe Payment Gateway Settings
STRIPE_API_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_CONNECT_CLIENT_ID=your_stripe_connect_client_id
STRIPE_PLATFORM_ACCOUNT=your_platform_account_id
STRIPE_API_VERSION=2023-10-16
STRIPE_WEBHOOK_TOLERANCE=300
STRIPE_PLATFORM_FEE_PERCENTAGE=2.9
STRIPE_PLATFORM_FEE_FIXED=0.30
STRIPE_IP_WHITELIST=ip1,ip2,ip3

# Tranzilla Payment Gateway Settings (Israeli Market)
TRANZILLA_TERMINAL_ID=your_tranzilla_terminal_id
TRANZILLA_API_KEY=your_tranzilla_api_key
TRANZILLA_API_ENDPOINT=https://api.tranzilla.com/v1
TRANZILLA_SANDBOX_MODE=true
TRANZILLA_ALLOWED_IPS=ip1,ip2,ip3
TRANZILLA_TIMEOUT=30000
TRANZILLA_MAX_RETRIES=3
TRANZILLA_RETRY_DELAY=1000

# Security Settings
ENCRYPTION_KEY=your_encryption_key
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_IV_LENGTH=16
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
IP_WHITELIST=127.0.0.1,10.0.0.0/8
SSL_KEY_PATH=/path/to/ssl/key
SSL_CERT_PATH=/path/to/ssl/cert
ENABLE_AUDIT_LOGS=true
PCI_COMPLIANCE_MODE=true
DATA_ENCRYPTION_KEY_ROTATION_DAYS=30

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region
AWS_KMS_KEY_ARN=your_kms_key_arn

# Monitoring Settings
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key
DATADOG_SERVICE_NAME=ijap-backend
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
ENABLE_REQUEST_LOGGING=true
PERFORMANCE_METRICS_ENABLED=true
ALERT_EMAIL=alerts@ijap.org
ALERT_SLACK_WEBHOOK=your_slack_webhook_url

# Israeli Compliance Settings
ISRAELI_TAX_AUTHORITY_API_KEY=your_tax_authority_key
ISRAELI_NONPROFIT_ID=your_nonprofit_id
ENABLE_ISRAELI_TAX_RECEIPTS=true
TAX_RECEIPT_TEMPLATE_PATH=/path/to/templates
COMPLIANCE_MODE=strict
GDPR_ENABLED=true

# Error Handling
MAX_RETRIES=3
RETRY_DELAY=1000
ERROR_NOTIFICATION_THRESHOLD=5
DETAILED_ERRORS=false

# Regional Settings
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,ILS,GBP
MAX_TRANSACTION_AMOUNT_USD=50000
MAX_TRANSACTION_AMOUNT_ILS=175000